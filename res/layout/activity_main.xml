<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <Button android:id="@+id/course_1"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_1" 
        android:onClick="chooseCourseOne" />
    
    <Button android:id="@+id/course_2"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_2" 
        android:onClick="chooseCourseTwo" />
    
    <Button android:id="@+id/course_3"
    	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/course_3" 
        android:onClick="chooseCourseThree" />
    
</LinearLayout>

